<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.sys.dao.FxGoodsTypeDao">
    
	<sql id="fxGoodsTypeColumns">
		a.goods_type_id AS "goodsTypeId",
		a.goods_type_name AS "goodsTypeName"
	</sql>
	
	<sql id="fxGoodsTypeJoins">
	</sql>
    
	<select id="get" resultType="FxGoodsType">
		SELECT 
			<include refid="fxGoodsTypeColumns"/>
		FROM fx_goods_type a
		<include refid="fxGoodsTypeJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="FxGoodsType">
		SELECT 
			<include refid="fxGoodsTypeColumns"/>
		FROM fx_goods_type a
		<include refid="fxGoodsTypeJoins"/>
		<where>
			
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="FxGoodsType">
		SELECT 
			<include refid="fxGoodsTypeColumns"/>
		FROM fx_goods_type a
		<include refid="fxGoodsTypeJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO fx_goods_type(
			goods_type_id,
			goods_type_name
		) VALUES (
			#{goodsTypeId},
			#{goodsTypeName}
		)
	</insert>
	
	<update id="update">
		UPDATE fx_goods_type SET 	
			goods_type_id = #{goodsTypeId},
			goods_type_name = #{goodsTypeName}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM fx_goods_type
		WHERE id = #{id}
	</update>
	
</mapper>